{
  "sections": {
    "main": {
      "type": "ds-main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "subtitle": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "e0d2cbb4-f6dc-4a60-86fc-128623892fa9": {
          "type": "shopify:\/\/apps\/dropsmart-starter-app\/blocks\/product-reviews\/79c7781a-151c-4a0b-8787-33d3543aaddc",
          "settings": {
            "stars_fill_color": "#b1af1c",
            "star_size": 28,
            "padding_x": 50,
            "padding_y": 0,
            "heading": "Customer Reviews",
