            "existing_reviews_action_text": "Write Review",
            "allow_unverified_reviews": false,
            "product": "{{product}}"
          }
        },
        "f55aef28-4047-4532-a902-b950694f8a52": {
          "type": "shopify:\/\/apps\/dropsmart-starter-app\/blocks\/average-rating\/79c7781a-151c-4a0b-8787-33d3543aaddc",
          "settings": {
            "stars_fill_color": "#000000",
            "star_size": 24,
            "padding_x": 0,
            "padding_y": 0,
            "show_heading": true,
            "heading": "Average Score",
            "product": "{{product}}"
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "settings": {
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "settings": {
            "show_dynamic_checkout": true,
            "hide_cart_button": false
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "share": {
          "type": "share",
          "settings": {
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "subtitle",
        "price",
        "e0d2cbb4-f6dc-4a60-86fc-128623892fa9",
        "f55aef28-4047-4532-a902-b950694f8a52",
        "variant_picker",
        "quantity_selector",
        "buy_buttons",
        "description",
        "share"
      ],
      "settings": {
        "enable_sticky_info": true,
        "enable_video_looping": false,
        "enable_slide_show": true
      }
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "You may also like",
        "image_ratio": "adapt",
        "show_secondary_image": false,
        "add_image_padding": false,
        "show_image_outline": true,
        "show_vendor": false,
        "show_rating": false
      }
    }
