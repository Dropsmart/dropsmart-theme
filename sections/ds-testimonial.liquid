<!-- DESKTOP -->
<div id="{{section.settings.heading}}" style="
          background: {{section.settings.background-color}} 
            {% if section.settings.background-image %} 
               url('{{section.settings.background-image | img_url: 'master'}}') no-repeat center center; background-size: cover 
            {% endif %}
          ;" class="ds-lp-content one-col {% if section.settings.reverse-on-mobile %}mobile-reverse{% endif %}">
    <div class="Container {{section.settings.padding}} {{section.settings.no-padding}}">
      <div class="center_content container-{{section.settings.container-width}} flex-column">
         <div class="content">
                           
            {% if section.settings.title_text %}
               {%- render 'ds-component-h1', 
                  fontColor: section.settings.title_font_color, 
                  fontSize: section.settings.title_font_size, 
                  align: section.settings.title_align,
                  fontWeight: section.settings.title_font_weight,
                  text: section.settings.title_text
               -%}
            {% endif %}

            {% if section.settings.description_text %}
               {%- render 'ds-component-paragraph', 
                  fontColor: section.settings.description_font_color, 
                  fontSize: section.settings.description_font_size, 
                  align: section.settings.description_align,
                  fontWeight: section.settings.description_font_weight,
                  text: section.settings.description_text
               -%}
            {% endif %}
         </div>
      </div> 
      <div class="center_content container-{{section.settings.container-width}} flex-column">  
        <div class="features flex flex-row mobile-flex-row justify-center">
            {% for block in section.blocks %}
              {% case block.type %}

                  {% when 'testimonial' %}
                     {% include 'ds-component-testimonial' %}  
      
              {% endcase %}
            {% endfor %}
        </div>
      </div>  
    </div>
</div>

