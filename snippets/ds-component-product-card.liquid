<div
  style="align-self: {{block.settings.vertical-align-content}};"
  class="ds-component ds-component-feature ds-component-product-card flex flex-basis-{{section.settings.feature-basis}} flex-column"
>

  <div
    style="
      background: {{block.settings.background-color}};
      border-radius: {{block.settings.border-radius}};
    "
    class="flex full-width flex-column no-padding {% if block.settings.has-shadow %} shadow {% endif %}"
  > 
    {% if block.settings.emphasis != empty %}
      <span class="emphasis weight-{{block.settings.emphasis-font-weight}}"
      style="background: {{block.settings.emphasis-background-color}}; color: {{block.settings.emphasis-font-color}}; font-size:{{block.settings.emphasis-font-size}}em;">
        {{block.settings.emphasis}}
      </span>
    {% endif %}

    {% if block.settings.has-icon %}
     {% if block.settings.icon-image != null %}
        <img loading="lazy" class="mobile-hide" style="
            width: auto;
            height: {{block.settings.icon-size}}px;
            min-height: {{block.settings.icon-size}}px;
            max-height: {{block.settings.icon-size}}px;
          " 
          src="
            {{ block.settings.icon-image | img_url: 'medium'}}
          "
        />
      {% endif %}
      
      {% if block.settings.mobile-icon-image != null %}
        <img loading="lazy" class="desktop-hide" style="
            display: flex !important;
            height: auto;
            width: {{block.settings.mobile-icon-size}}px;
            min-width: {{block.settings.mobile-icon-size}}px;
            max-width: {{block.settings.mobile-icon-size}}px;
          " 
          src="
              {% if block.settings.mobile-icon-image != null %}
                {{ block.settings.mobile-icon-image | img_url: 'medium'}}
              {% else %}    
                {{ block.settings.icon-image | img_url: 'medium'}} 
              {% endif %}
          "
        />

      {% else if block.settings.mobile-icon-image == null %}
        <img loading="lazy" class="desktop-hide" style="
            display: flex !important;
            height: auto;
            width: {{block.settings.mobile-icon-size}}px;
            min-width: {{block.settings.mobile-icon-size}}px;
            max-width: {{block.settings.mobile-icon-size}}px;
          " 
          src="
          {% if block.settings.icon-image != null %}
            {{ block.settings.icon-image | img_url: 'medium'}} 
          {% endif %}
            "
        />
      {% endif %}
    {% endif %}


      {% comment %} {% else %}
        <div class="desktop-hide" style="height:3em">
      </div> {% endcomment %}
      
        <div class="component-product-card justify-center">
            {%- render 'ds-component-h3', 
              fontColor: block.settings.title-font-color, 
              backgroundColor: block.settings.background-color,
              fontSize: block.settings.font-size, 
              align: "center",
              fontWeight: block.settings.font-weight,
              text: block.settings.text
            -%}
            {% if block.settings.description-text != empty %}
              {%- render 'ds-component-paragraph', 
              fontColor: block.settings.description-font-color, 
              backgroundColor: block.settings.description-background-color,
              fontSize: block.settings.description-font-size, 
              align: "center",
              fontWeight: block.settings.description-font-weight,
              text: block.settings.description-text
              -%}
            {% endif %}
            {% if block.settings.full-price-value != empty %}
              {%- render 'ds-component-manual-price', 
                  font_color: block.settings.full-price-font-color, 
                  background_color: block.settings.full-price-background-color,
                  font_size: block.settings.full-price-font-size, 
                  align: "center",
                  line_through: true,
                  font_weight: block.settings.full-price-font-weight,
                  value: block.settings.full-price-value,
              -%}
            {% endif %}
            {%- render 'ds-component-manual-price', 
                font_color: block.settings.price-font-color, 
                background_color: block.settings.price-background-color,
                font_size: block.settings.price-font-size, 
                align: "center",
                font_weight: block.settings.price-font-weight,
                value: block.settings.price-value,
            -%}
            {%- render 'ds-component-installment' 
              installment_number: block.settings.installment_number
              installment_number_font_color: block.settings.installment_number_font_color
              installment_number_font_size: block.settings.installment_number_font_size
              installment_price: block.settings.installment_price
              show_installment: block.settings.show_installment
              installment_price_font_color: block.settings.installment_price_font_color
              installment_price_font_size: block.settings.installment_price_font_size
            -%}
            {%- render 'ds-component-cta',
              backgroundColor: block.settings.cta-background-color, 
              fontColor: block.settings.cta-font-color, 
              fontSize: block.settings.cta-font-size, 
              fontWeight: block.settings.cta-font-weight, 
              link: block.settings.product-link,
              borderRadius: block.settings.cta-border-radius,
              align: "center",
              text: block.settings.cta-text,
              pulse: block.settings.cta-pulse,
            -%}
        </div>
    </div>
  </div>
    