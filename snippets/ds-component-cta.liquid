<div class="ds-component ds-component-cta justify-{{align}} grow-0">    
    <a  
        style="font-size: {{fontSize}}em; border-radius: {{borderRadius}}; background-color:{{backgroundColor}}; border: 2px solid {{backgroundColor}}; {% if pulse %} color: {{backgroundColor}}77 {% endif %};"
        class="component-cta justify-{{align}} weight-{{fontWeight}} {% if pulse %} pulse {% endif %}" 
        href="{{link}}"
        onclick="{% if onclick != empty %} ctaFired {% else %} {{onclick}} {% endif %}" 
    >
      <span style="color:{{fontColor}};">
        {{text}}
      </span>
  </a>
</div>