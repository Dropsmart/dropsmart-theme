<div class="flex jusfify-center"  style="justify-content: space-around;">
    <iframe class="mobile-hide"

    {% if video_size_desktop == "pequeno" %}
        width="480" height="270"

    {% elsif video_size_desktop == "medio" %}
        width="560" height="315"

    {% elsif video_size_desktop == "grande" %}
        width="720" height="405"

    {% elsif video_size_desktop == "maximo" %}
        width="100%" height="540"
    {% endif %}



    src="https://www.youtube.com/embed/{{video_id}}?autoplay=1{% if autoplay == "true" %}?autoplay=1{% endif %}"
    title="YouTube video player"
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen>
    </iframe>

    <iframe class="desktop-hide"
    
    {% if video_size_mobile == "maximo" %}
        width="100%" 
    {% endif %}

    src="https://www.youtube.com/embed/{{video_id}}?autoplay=1{% if autoplay == "true" %}?autoplay=1{% endif %}"
    title="YouTube video player"
    frameborder="0"
   
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
    >
    </iframe>
</div>
